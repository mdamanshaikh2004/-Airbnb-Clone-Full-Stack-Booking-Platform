const mysqlPool = require('../../db/mysql');

async function createBooking(user_id, listing_id, start_date, end_date) {
    await mysqlPool.query(
        'INSERT INTO bookings (user_id, listing_id, start_date, end_date) VALUES (?, ?, ?, ?)',
        [user_id, listing_id, start_date, end_date]
    );
}

async function getBookingsByUser(user_id) {
    const [rows] = await mysqlPool.query('SELECT * FROM bookings WHERE user_id=?', [user_id]);
    return rows;
}

module.exports = { createBooking, getBookingsByUser };
